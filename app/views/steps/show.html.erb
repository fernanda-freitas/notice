<h2><%= @step.title %></h2>
<p><%= @step.content %></p>
<div class="d-flex justify-content-between">
  <div>
    <%= link_to '< Back', kit_path(@step.kit_id) %> |
    <%= link_to 'Edit', edit_step_path(@step) %> |
    <%= link_to 'Delete', kit_step_path(@kit, @step), method: :delete %>
  </div>
  <div>
    <%= link_to 'New step', new_kit_step_path(@kit), class: "btn btn-secondary me-2" %>
    <%= link_to 'I\'m done with my Kit', kit_steps_path(@kit), class: "btn btn-primary" %>
  </div>
</div>
