<div class="row">
  <div class="col-md-6">
    <h1>Overview</h1>
    <h3><%= @kit.title %></h3>
    <h5 class="mb-5"><%= @kit.description %></h5>
    <% @steps.each do |step| %>
      <p>Step: <%= step.title %></p>
    <% end %>
  </div>
  <div class="col-md-6">
    <div data-controller="clipboard" data-clipboard-feedback-text-value="Copied!" class="input-group flex-nowrap mb-5">
      <span class="input-group-append">
          <div class="input-group-text h-100"><i class="fa fa-clone"></i></div>
      </span>
      <input data-clipboard-target="input" value="<%= @share_url %>" readonly disabled type="text" class="form-control">
      <button data-action="click->clipboard#copy" class="btn btn-primary" id="addon-wrapping">Copy</button>
    </div>
  </div>
</div>
