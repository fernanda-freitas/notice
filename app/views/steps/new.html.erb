<div class="custom-container">
  <div class="row justify-content-center">
  <div class="col-xs-12 col-lg-6">
    <h1>Add a step</h1>
      <%= simple_form_for [ @kit, @step ] do |f| %>
        <%= f.input :title %>
        <%= f.input :content %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Submit' %>
      <% end %>
    </div>
  </div>
</div>
