<h2>Title Information</h2>

<%= form_with(model: @title, url: local: true) do |f| %>
  <% if @title.errors.any? %>
    <div id="error_explanation">
      <b><%= pluralize(@title.errors.count, "error") %> prohibited this title from being saved:</b>

      <ul>
        <% @title.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <%= f.submit 'Next Step', class: 'btn btn-primary' %>
<% end %>
